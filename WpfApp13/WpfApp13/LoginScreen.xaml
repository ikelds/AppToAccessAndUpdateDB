<Window x:Class="WpfApp13.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp13"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" FontSize="14" Background="Gray"
        WindowStartupLocation="CenterScreen"
        FocusManager.FocusedElement="{Binding ElementName=txtUsername}">
    <StackPanel>
        <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
        <Separator></Separator>
        <Label Content= "Логин" Foreground="White" />
        <TextBox Name="txtUsername"/>
        <Label Content= "Пароль" Foreground="White" />
        <PasswordBox Name="txtPass"/>
        <Button Name="btnSubmit" Click="BtnSubmit_Click" Content="Войти" Margin="30"
                IsDefault="True"/>
    </StackPanel>
</Window>
